<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_RIGHT" maxWidth="1.7976931348623157E308" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="10">
    <children>
        <VBox fx:id="textContainer" maxWidth="300.0" HBox.hgrow="NEVER">
            <children>
                <Label fx:id="dialog" text="Label" wrapText="true" minHeight="-Infinity" />
            </children>
        </VBox>
        <ImageView fx:id="displayPicture" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
    </padding>
</fx:root>
