<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" stylesheets="@../css/styles.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jarvis.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" vvalue="1.0" fitToWidth="true"
                    AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="50.0">
            <content>
                <VBox fx:id="dialogContainer" fillWidth="true" styleClass="dialog-container" />
            </content>
        </ScrollPane>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" spacing="10" style="-fx-padding: 5;">
            <TextField fx:id="userInput" onAction="#handleUserInput"
                       promptText="Type a command..." HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" onAction="#handleUserInput"
                    text="Send" prefWidth="70" />
        </HBox>
    </children>
</AnchorPane>
